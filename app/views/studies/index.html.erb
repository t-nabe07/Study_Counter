<div class="container">

  <div class="row">
    <div class="col-md-6">
      <h3>勉強時間を記録しよう!!</h3>
      <%= form_with model: @study, url:'/studies', local:true do |f| %>
        <h4>day</h4>
        <%= f.date_select :date %>
        <h4>time</h4>
        <%= f.text_area :time, placeholder: "小数点第一位まで可", class:"time_form" %>
        <h4>category</h4>
        <p>カテゴリー(item)実装予定</p>
        <%= f.submit "記録",class: 'submit_btn' %>
      <% end %>
    </div>

    <div class="col-md-6">
      <table class="table">
        <thead>
          <tr>
            <th>Day</th>
            <th>Category</th>
            <th>Time</th>
          </tr>
        </thead>
    </table>

  </div>

  </div>



</div>

<h3>合計時間:<%= @studies %></h3>